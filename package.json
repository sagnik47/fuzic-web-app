{
  "name": "fuzic-web-app",
  "version": "1.0.0",
  "description": "A web app to manage Spotify playlists - convert liked songs, merge playlists, and remove artist songs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && echo 'Building Fuzic web app...' && node -e 'console.log(\"Validating server.js...\")' && node -c server.js && echo 'Build completed successfully!'",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --watch",
    "postbuild": "echo 'Post-build cleanup completed.'",
    "prebuild": "echo 'Starting build process...'",
    "deploy": "npm run build && echo 'Ready for deployment!'"
  },
  "keywords": [
    "spotify",
    "playlist",
    "music",
    "web-app",
    "apple-music",
    "amazon-music",
    "cross-platform"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "spotify-web-api-node": "^5.0.2",
    "axios": "^1.6.0",
    "music-kit": "^1.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.4.0"
  },
  "overrides": {
    "superagent": "9.0.0"
  }
}
